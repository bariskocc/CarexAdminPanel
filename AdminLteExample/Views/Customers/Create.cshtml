@model Tuple<AdminLteExample.Models.CarBrands,AdminLteExample.Models.CarModels>;
@*@model AdminLteExample.Models.Customer*@
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Müşteriler
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Müşteri Ekle</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="CreateCustomer">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Araç Plakası</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="CarPlate" placeholder="Araç Plakası">
                        @*@Html.TextBoxFor(m => m.CarPlate, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CarPlate, "", new { @style = "color-red" })*@
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Marka</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.Item1.BrandName, (List<SelectListItem>)ViewBag.markalar, new { @class = "form-control" })
                        @*<input type="text" class="form-control" name="Brand" placeholder="Marka">*@
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Model</label>
                    <div class="col-sm-10">
                        @*@Html.DropDownListFor(m => m.Item2.ModelName, (List<SelectListItem>)ViewBag.modeller, new { @class = "form-control" })*@
                        @*<input type="text" class="form-control" name="Model" placeholder="Model">*@
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Ad Soyad</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Name" placeholder="Ad Soyad">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Telefon</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Phone" placeholder="Telefon">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Araç Tipi</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="VehicleType" placeholder="Araç Tipi">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">E-posta</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" name="Email" placeholder="E-posta">
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a href="/Customers/Index"><button type="button" class="btn btn-default">İptal</button></a>
                <button type="submit" class="btn btn-info pull-right">Oluştur</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>