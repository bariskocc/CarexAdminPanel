@model AdminLteExample.Models.Customer

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Details
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Add Detail</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="/Customers/AddDetail">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Operation</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Operation" placeholder="Operation">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">OperationDate</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" name="OperationDate" placeholder="OperationDate">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">OperationCost</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" name="OperationCost" placeholder="OperationCost">
                    </div>
                </div>
                
                <input type="hidden" name="CustomerId" value="@Model.Id" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info pull-right">Create</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>